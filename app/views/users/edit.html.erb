<h2>Edit your details</h2>
<%= form_for @user do |f| %>
    <%= @user.username %>
    <%= f.label :fname %>
    <%= f.text_field :fname %>
    <%= f.label :lname %>
    <%= f.text_field :lname %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.submit %>
<% end %>