
<div id="user-create">
<h2>Create a New User!!</h2>
<%= form_for @user do |f| %>  
    <%= f.label :fname %>  
    <%= f.text_field :fname %> <br/> <br/>
    <%= f.label :lname %>  
    <%= f.text_field :lname %> <br/> <br/>
    <%= f.label :username %>  
    <%= f.text_field :username %> <br/> <br/>
    <%= f.label :email %>  
    <%= f.text_field :email %>  <br/> <br/>
    <%= f.label :password %>  
    <%= f.password_field :password %> <br/> <br/> 
    <div id="action"><%= f.submit %></div>
<% end %>
</div>