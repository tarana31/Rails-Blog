
<div id="post-new">
<h1>Create a New Post</h1>

<%= form_for @post do |f|%>
<%= f.label :title %>
<%= f.text_field :title %> <br/> <br/>
<%= f.label :body %>
<%= f.text_area :body, rows: 8, required: true, minlength: 10, maxlength: 500 %><br/>

<div id="action"><%= f.submit "Create Post" %></div>
<%end%>
</div>