<h2>Posts </h2>
<div id = "post-indexcontainer">

<% @posts.reverse.each do |post| %>
 <a href="/posts/<%= post.id %>" id ="postbox">
    <div class="post-title">
        <h3><%= post.title %></h3>
    </div>
    <div class="post-body">
        <h3><%= post.body %></h3>
    </div>
    <span>
        Posted by: <%= post.user_id %>
    </span>
<% end %>
</a>
</div>