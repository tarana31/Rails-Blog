<h2>Posts </h2>

<% @posts.reverse.each do |post| %>
    <div class="post-title">
        <h3><%= post.title %></h3>
    </div>
    <div class="post-body">
        <h3><%= post.body %></h3>
    </div>
        <span>
            posted by: <%= post.user_id %>
        </span>
        <span>
            <% if session[:user_id] == post.user_id %>
                <%= link_to 'Edit', edit_post_path(post) %>
                <%= link_to 'Delete', post, method: :delete%>
            <% end %>
                
        </span>
        </div>
      </div>
    <% end %>