<h1>Post</h1>

<h3><%= @post.title %></h3>
<p><%= @post.body %></p>

<span>
    Posted by: <%= @post.user_id %>
</span>
<span>
        <% if session[:user_id] == @post.user_id %>
            <%= link_to 'Edit', edit_post_path %>
            <%= link_to 'Delete', @post, method: :delete%>
        <% end %>       
</span>

<div class="comment-index">
    <a href="/posts/<%=@post.id%>/comments/new">Comment</a>
   
</div>