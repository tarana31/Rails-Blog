
<div id = "session-new">  

<h1>Sign In</h1>

<%= form_tag(create_session_path, method: 'post') do %>
  <%= label_tag(:username)%>
  <div id="text"><%= text_field_tag(:username)%></div>
  <%= label_tag(:password)%>
  <div id="text"><%= password_field_tag(:password)%></div>
  <div id="login"><%= submit_tag("Sign In")%></div>
  <% end %>
</div>
  